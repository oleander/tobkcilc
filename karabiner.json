{
  "title": "BLE Events",
  "rules": [
    {
      "description": "Ensures we stay awake",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 10000,
            "basic.to_delayed_action_delay_milliseconds": 30000
          },

          "to_if_held_down": [
            {
              "shell_command": "${HOME}/.dotfiles/bin/anybar yellow"
            }
          ],

          "to": [
            {
              "shell_command": "${HOME}/.dotfiles/bin/anybar green"
            },
            {
              "pointing_button": "button32"
            }
          ],

          "to_delayed_action": {
            "to_if_invoked": [
              {
                "shell_command": "${HOME}/.dotfiles/bin/anybar red"
              }
            ],
            "to_if_canceled": [
              {
                "shell_command": "${HOME}/.dotfiles/bin/anybar blue"
              }
            ]
          },

          "conditions": [
            {
              "type": "device_if",
              "identifiers": [
                {
                  "vendor_id": 44037,
                  "product_id": 2690
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
