{
  "title": "BLE Events",
  "rules": [
    {
      "description": "Ensures we stay awake",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 10000
          },
          "to_if_held_down": [
            {
              "shell_command": "/Users/linusoleander/.dotfiles/bin/anybar red"
            }
          ],
          "to": [
            {
              "shell_command": "/Users/linusoleander/.dotfiles/bin/anybar green"
